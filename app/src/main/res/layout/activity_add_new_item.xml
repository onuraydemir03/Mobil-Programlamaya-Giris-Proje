<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addNewItemSubmitButton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dip"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".AddNewItemActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dip"
            android:layout_height="40dip"
            android:text="Item Type : "
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/addNewItemTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="100dip"
            android:layout_height="40dip"
            android:text="Item Color : "
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/addNewItemColorSpinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="100dip"
            android:layout_height="40dip"
            android:text="Pattern : "
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/addNewItemPatternSpinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/addNewItemDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:focusable="false"
            android:hint="Buying Date"
            android:imeOptions="actionNext"
            android:inputType="date"
            android:maxLength="30"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/addNewItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Price"
            android:inputType="number"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/addNewItemImage"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:backgroundTint="@color/white"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/please_select_image" />

    <ImageButton
        android:id="@+id/addNewItemButton"
        android:layout_width="200dip"
        android:layout_height="50dip"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/save" />

</LinearLayout>