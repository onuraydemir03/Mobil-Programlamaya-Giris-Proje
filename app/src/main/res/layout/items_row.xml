<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dip"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="300dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kind of Item"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itemRowKindOfItemText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="300dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itemRowColorOfItemText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="300dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pattern"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itemRowPatternOfItemText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="300dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Buying Date"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itemRowBuyDateOfItemText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="300dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Price"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itemRowPriceOfItemText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="italic" />
        </LinearLayout>

        <ImageView
            android:id="@+id/itemRowImage"
            android:layout_width="match_parent"
            android:layout_height="100dip"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/itemsRowEditButton"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/edit" />

            <ImageButton
                android:id="@+id/itemsRowDeleteButton"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/delete" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>